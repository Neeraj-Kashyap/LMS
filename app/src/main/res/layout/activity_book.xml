<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:id="@+id/i1"
        android:layout_height="250dp"
        android:layout_width="match_parent"
        >


        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:id="@+id/to"
            android:background="@color/colorPrimaryDark">

        </android.support.v7.widget.Toolbar>


        <ImageView
            android:id="@+id/bookcover"
            android:layout_marginTop="50dp"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:src="@drawable/egg"
            android:layout_marginLeft="30dp"/>
        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/back1"
            android:layout_marginLeft="20dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_arrow_back_white_24dp"
            />
        <TextView
            android:id="@+id/Book_name"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book_Name"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/bookcover"
            android:textSize="15sp"
            android:typeface="serif"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_below="@+id/Book_name"
            android:id="@+id/Book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book_Author"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/bookcover"
            android:textSize="10sp"
            android:typeface="serif"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

        <android.support.design.widget.FloatingActionButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/issue"

            app:backgroundTint="?android:attr/colorActivatedHighlight" />

        <android.support.design.widget.FloatingActionButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/reserved"

            app:backgroundTint="?android:attr/colorActivatedHighlight" />

    </RelativeLayout>

    <TextView
        android:id="@+id/cat"
        android:layout_below="@+id/i1"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:text="Category :"
        android:layout_marginLeft="30dp"
        android:textSize="15sp"
        android:typeface="serif"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/cat1"
        android:layout_below="@+id/cat"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:text="Book_Category"
        android:layout_marginLeft="50dp"
        android:textSize="15sp"
        android:typeface="serif"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/cat2"
        android:layout_below="@+id/cat1"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:text="ISBN. NO :"
        android:layout_marginLeft="30dp"
        android:textSize="15sp"
        android:typeface="serif"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/cat3"
        android:layout_below="@+id/cat2"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:text="Book_ISBN_NO"
        android:layout_marginLeft="50dp"
        android:textSize="15sp"
        android:typeface="serif"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/cat4"
        android:layout_below="@+id/cat3"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:text="No Of Pages :"
        android:layout_marginLeft="30dp"
        android:textSize="15sp"
        android:typeface="serif"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/cat5"
        android:layout_below="@+id/cat4"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:text="Book_No_Of_Pages"
        android:layout_marginLeft="50dp"
        android:textSize="15sp"
        android:typeface="serif"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/cat6"
        android:layout_below="@+id/cat5"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:text="No Of Avaialble Copies :"
        android:layout_marginLeft="30dp"
        android:textSize="15sp"
        android:typeface="serif"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/cat7"
        android:layout_below="@+id/cat6"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:text="1"
        android:layout_marginLeft="50dp"
        android:textSize="15sp"
        android:typeface="serif"
        android:textStyle="bold"

        />

</RelativeLayout>
