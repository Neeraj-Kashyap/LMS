<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout

            android:id="@+id/viewA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@android:color/holo_purple"
            android:orientation="horizontal">


            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/back1"
                android:layout_marginLeft="20dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_arrow_back_white_24dp"
                />
            <TextView
                android:id="@+id/Book_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center"
                android:layout_marginBottom="90dp"
                android:text="Book_Name"
                android:textSize="25sp"
                android:typeface="serif"
                android:textStyle="bold"
                android:textColor="@color/white"

                />



        </RelativeLayout>

        <ScrollView
            android:id="@+id/viewB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="@android:color/holo_orange_light"
            android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="100dp"
        android:id="@+id/cat0"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:text="Author :"
        android:layout_marginLeft="30dp"
        android:textSize="15sp"
        android:typeface="serif"
        android:textStyle="bold"

        />
    <TextView
        android:layout_below="@+id/cat0"
        android:id="@+id/Book_author"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Book_Author"
        android:layout_marginLeft="50dp"
        android:textSize="15sp"
        android:typeface="serif"
        android:textStyle="bold"
                />



    <TextView
        android:layout_below="@+id/Book_author"

        android:id="@+id/cat"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:text="Category :"
        android:layout_marginLeft="30dp"
        android:textSize="15sp"
        android:typeface="serif"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/cat1"
        android:layout_below="@+id/cat"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:text="Book_Category"
        android:layout_marginLeft="50dp"
        android:textSize="15sp"
        android:typeface="serif"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/cat2"
        android:layout_below="@+id/cat1"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:text="ISBN. NO :"
        android:layout_marginLeft="30dp"
        android:textSize="15sp"
        android:typeface="serif"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/cat3"
        android:layout_below="@+id/cat2"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:text="Book_ISBN_NO"
        android:layout_marginLeft="50dp"
        android:textSize="15sp"
        android:typeface="serif"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/cat4"
        android:layout_below="@+id/cat3"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:text="No Of Pages :"
        android:layout_marginLeft="30dp"
        android:textSize="15sp"
        android:typeface="serif"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/cat5"
        android:layout_below="@+id/cat4"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:text="Book_No_Of_Pages"
        android:layout_marginLeft="50dp"
        android:textSize="15sp"
        android:typeface="serif"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/cat6"
        android:layout_below="@+id/cat5"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:text="No Of Avaialble Copies :"
        android:layout_marginLeft="30dp"
        android:textSize="15sp"
        android:typeface="serif"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/cat7"
        android:layout_below="@+id/cat6"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:text="1"
        android:layout_marginLeft="50dp"
        android:textSize="15sp"
        android:typeface="serif"
        android:textStyle="bold"

        />

</RelativeLayout>

        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/float1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"

        app:layout_anchor="@id/viewA"
        app:layout_anchorGravity="bottom|right|end"
        android:src="@drawable/issue"

        app:backgroundTint="?android:attr/colorActivatedHighlight" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/float2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="80dp"
        android:clickable="true"
        app:layout_anchor="@id/viewA"
        app:layout_anchorGravity="bottom|right|end"
        android:src="@drawable/reserved"
        app:backgroundTint="?android:attr/colorActivatedHighlight" />

    <ImageView
        android:id="@+id/bookcover"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:src="@drawable/egg"
        android:layout_margin="20dp"
        app:layout_anchor="@id/viewA"
        app:layout_anchorGravity="bottom|left|end"/>
</android.support.design.widget.CoordinatorLayout>
